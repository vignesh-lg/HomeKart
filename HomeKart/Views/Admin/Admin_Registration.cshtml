@model HomeKart.Models.AccountModel
@{
    ViewBag.Title = "Admin_Registration";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("Admin_Registration", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link href="~/Content/style.css" rel="stylesheet" />
    @*if (TempData["Message"] != null)
    {
        <p>
            @TempData["Message"].ToString()
        </p>
    }*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <div class="sign-in-form" , id="myforms">

                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation_message" })
                    @Html.ValidationMessageFor(model => model.CellNumber, "", new { @class = "validation_message" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation_message" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "validation_message" })

                    <h2 class="title">Sign Up</h2>

                    <div class="input-field">
                        <i class="fa fa-envelope"></i>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "login-text", @placeholder = "Enter MailID" } })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-mobile"></i>
                        @Html.EditorFor(model => model.CellNumber, new { htmlAttributes = new { @class = "login-text", @placeholder = "Enter CellNumber" } })
                    </div>
                    @*<div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "login-password", @placeholder = "Enter Password" } })
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "login-text", @placeholder = "Confirm Password" } })
                    </div>*@
                    <input type="submit" value="Register" class="btn solid" />
                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>HOME KART</h3>
                    <p>
                        Welcome, click below to see entire customer data
                    </p>
                    <a href='@Url.Action("CustomerData", "Admin")' class="btn transparent" id="sign-up-btn">
                        CustomerData
                    </a>
                </div>
            </div>
        </div>
    </div>
}




